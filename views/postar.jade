block content
	.postar
		.container-fluit
			if error
				.alert-danger
					p #{error}
			h1 #{title}
			form(role="form" , class="form-signin",method="post", action="/api/post/")
				input(class="form-control",type="hidden", name="_csrf", value="#{csrfToken}")
				.form-group
					label(class="form-signin-heading",for="titulo") Titulo
					input(class="form-control",type="text" , placeholder="Titulo" , name="titulo", id="titulo")
				.form-group
					label(class="form-signin-heading",for="body") Texto	
					textarea(class="form-control",placeholder="Testo do post", name="body", id="body" ,maxlength="10000")
				.form-group
					label(class="form-signin-heading",for='tag') Tags
					input(class="form-control",type="text" , placeholder="tags" name='tag', id='tag')
				.form-group
					button(class="btn btn-lg btn-primary btn-block",type="submit") Salvar
				.form-group
					a(href="/#" class="btn btn-lg btn-block") Voltar